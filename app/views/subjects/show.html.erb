<% provide :title, @subject.name %>
<div class="panel panel-info">
  <div class="alert alert-info" role="alert"><span class="user">
    <h3><%= link_to @subject.name, @subject %></h3>
    <span class="timestamp">
      Posted <%= time_ago_in_words @subject.created_at %> ago.
    </span>
    <% user_subject = user_subject current_user.id, @subject.id %>
    <% unless user_subject.status == t(:completed) %>
      <%= link_to t(:finish), user_subject_path(user_subject, status: t(:completed)),
          method: :patch, remote: true, class: "user-subject-status btn btn-primary" %>
    <% end %>
  </div>
  <span class="content">
    <%= @subject.instruction %>
  </span>
</div>
<%= render @subject.tasks %>
