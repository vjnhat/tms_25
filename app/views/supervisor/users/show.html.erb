<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="col-md-8">
  <% if @user.activities.any? %>
    <h3> Activities <%= @user.activities.count %></h3>
    <% @user.activities.each do |activity| %>
      <ol class="row">
        <%= activity.action %>
        <%= activity.find_name %>
      </ol>
    <% end %>
  <% end %>
</div>
